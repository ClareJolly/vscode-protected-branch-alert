{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"outDir": "out/build",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"types": ["vscode", "node"],
		"skipLibCheck": true
	},
	"ts-node": {
		"esm": true
	},
	"include": ["src", "scripts"],
	"exclude": ["out", ".vscode-test"]
}
